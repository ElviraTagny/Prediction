<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Prediction.DetailPage">
	<StackLayout
        Orientation="Vertical"
        Padding="10"
        BackgroundColor="White">
        <!--<Label TextColor="Black"
            FontSize="35"
            XAlign="Center"
            x:Name="Name"
        />-->
        <StackLayout 
            Margin="0,0,0,10"
            Orientation="Horizontal"
            x:Name="NbEnfantsSL">
            <Label TextColor="Gray"
                FontSize="17"
                Text="Nombre d'enfants:"
            />
            <Label TextColor="Black"
                FontSize="17"
                x:Name="NbEnfants"
            />
        </StackLayout>
        <StackLayout 
            Orientation="Horizontal"
            Margin="0,0,0,10"
            x:Name="SituationFamilleSL">
            <Label TextColor="Gray"
                FontSize="17"
                Text="Situation de famille:"
            />
            <Label TextColor="Black"
                FontSize="17"
                x:Name="SituationFamille"
            />
        </StackLayout>
        <StackLayout 
            Orientation="Horizontal"
            Margin="0,0,0,10"
            x:Name="TypeContratSL">
            <Label TextColor="Gray"
                FontSize="17"
                Text="Type de contrat:"
            />
            <Label TextColor="Black"
                FontSize="17"
                x:Name="TypeContrat"
            />
        </StackLayout>
        <StackLayout 
            Margin="0,0,0,10"
            Orientation="Horizontal"
            x:Name="TypeHabitationSL">
            <Label TextColor="Gray"
                FontSize="17"
                Text="Type d'habitation:"
            />
            <Label TextColor="Black"
                FontSize="17"
                x:Name="TypeHabitation"
            />
        </StackLayout>
        <StackLayout 
            Margin="0,0,0,10"
            Orientation="Horizontal"
            x:Name="MontantEmpruntSL">
            <Label TextColor="Gray"
                FontSize="17"
                Text="Montant Emprunt:"
            />
            <Label TextColor="Black"
                FontSize="17"
                x:Name="MontantEmprunt"
            />
        </StackLayout>
    </StackLayout>
</ContentPage>
